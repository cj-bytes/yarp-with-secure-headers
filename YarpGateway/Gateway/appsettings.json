{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "YarpResponseTransformConfig": {
    "SecureWebResponseHeaders": {
      "AddHeaders": {
        "test-header": "my-value",
        "cache-control": "no-store"
      },
      "RemoveHeaders": [
        "Server",
        "age"
      ]
    },
    "SecureApiResponseHeaders": {
      "AddHeaders": {
        "test-header": "my-value"
      },
      "RemoveHeaders": [
        "Server"
      ]
    }
  }
}
